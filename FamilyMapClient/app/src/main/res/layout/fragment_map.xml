<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myMapFragmentDifferent"
    tools:context=".MainActivity">

    <fragment
        android:layout_width="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="400dp"
        android:id="@+id/map"
        tools:context=".MainActivity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/bottomOfScreen">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/iconImageView"
            android:src='@drawable/gywsadxxqrdkbnmcpubh'/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="1"
            android:padding="@dimen/activity_vertical_marginLess"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:id="@+id/textTop"
                android:text='@string/introMapMessageOne'/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textBottom"
                android:text='@string/introMapMessageTwo'/>

        </GridLayout>
    </LinearLayout>
</LinearLayout>